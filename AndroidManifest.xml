<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.digihippo"
      android:versionCode="1"
      android:versionName="1.0"
      android:installLocation="preferExternal">
    <uses-sdk android:minSdkVersion="15"
              android:targetSdkVersion="24"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity
                android:name="net.digihippo.ShowTrainsActivity"
                android:configChanges="orientation|screenSize"
                android:theme="@android:style/Theme.Holo"/>
        <activity android:name="net.digihippo.ShowDetailsActivity" android:theme="@android:style/Theme.Holo"/>
        <activity android:name="net.digihippo.ViewFlippingActivity" android:theme="@android:style/Theme.Holo"/>
        <activity android:name="net.digihippo.NavigatorActivity" android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
