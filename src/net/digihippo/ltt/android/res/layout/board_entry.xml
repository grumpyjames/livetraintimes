<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:id="@+id/trainRow"
              android:gravity="center_vertical">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="00:00"
                    android:id="@+id/due"
                    android:lines="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
            />
            <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="On time"
                    android:id="@+id/comment"
                    android:lines="1"
                    android:gravity="center_vertical|center_horizontal"
            />
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="4dp"
                android:text="Hastings via Gatwick Airport &amp; Eastbourne &amp; Littlehampton via Hove &amp; Worthing "
                android:id="@+id/destination"
                android:lines="3"
                android:gravity="center_vertical"/>
        <TextView android:layout_width="30dip"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="13"
                  android:id="@+id/platform"
                  android:gravity="center_vertical|center_horizontal"
                  android:textStyle="bold"
        />
        <TextView android:layout_width="45dip"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text=""
                  android:id="@+id/arrivingAt"
                  android:paddingLeft="2dp"
                  android:gravity="center_vertical|center_horizontal"
                  android:textStyle="bold"
        />
        <Button style="?android:attr/buttonStyleSmall"
                android:layout_width="40dip"
                android:text=">>"
                android:id="@+id/button"
                android:gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_gravity="center">
        <TextView
                android:id="@+id/alert"
                android:text="--- Cancelled ---"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#FF0000"
                android:background="#44000000"
                android:textStyle="bold"
                android:letterSpacing="1.6"
        />
    </TableRow>
</FrameLayout>
